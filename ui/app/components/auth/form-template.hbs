{{#if this.formComponent}}
  {{#let (component this.formComponent) as |AuthFormComponent|}}
    {{! renders Auth::Form::Base or Auth::Form::<Type>}}
    <AuthFormComponent
      @authType={{@authType}}
      @cluster={{@cluster}}
      @onError={{@onError}}
      @onSuccess={{@onSuccess}}
      @wrappedToken={{@wrappedToken}}
    >
      {{yield to="namespace"}}
      {{yield to="back"}}
      {{yield to="tabs"}}
      {{yield to="error"}}
      {{yield to="footer"}}
    </AuthFormComponent>
  {{/let}}
{{/if}}