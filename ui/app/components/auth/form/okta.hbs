{{#if this.pollForOktaNumberChallenge.isRunning}}
  <OktaNumberChallenge
    @correctAnswer={{this.challengeAnswer}}
    @hasError={{this.authError}}
    @onReturnToLogin={{this.onCancel}}
  />
{{else}}
  <Auth::Form @onSubmit={{this.onSubmit}} @loginFields={{this.loginFields}}>
    {{yield}}
  </Auth::Form>
{{/if}}